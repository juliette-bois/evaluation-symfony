{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-center text-xl font-bold mb-4">{% trans %}Inscription{% endtrans %}</h1>
        <p class="text-center text-gray-500	w-96 m-auto">{% trans %}Bienvenue, ravie de faire ta connaissance !{% endtrans %}</p>
        <section class="py-12">
            {{ form_start(form_registration) }}

            {{ form_row(form_registration.username, {'label':'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
            {{ form_row(form_registration.email, {'label':'Adresse email', 'attr': {'placeholder': 'Adresse email'}}) }}
            {{ form_row(form_registration.password, {'label':'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
            {{ form_row(form_registration.confirm_password, {'label':'Confirmer votre mot de passe', 'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}

            <button type="submit" class="text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 mt-4 mb-8">{% trans %}Je m'inscris{% endtrans %}</button>

            {{ form_end(form_registration) }}
            <p class="text-center">{% trans %}Vous avez déjà un compte ? {% endtrans %} <a class="text-indigo-600" href="{{ path('security_login') }}">{% trans %}Se connecter{% endtrans %}</a></p>
        </section>
    </div>
{% endblock %}
