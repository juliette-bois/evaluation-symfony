{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

    <div class="container mx-auto px-4 py-8">
        <a href="/">Retour</a>
        <section class="py-12">
            <article class="bg-gray-100 p-8 rounded-xl">
                <h2 class="text-lg font-bold">{{ article.title }}</h2>
                <p class="text-gray-500 text-sm">Ecrit le {{ article.createdAt | date('d/m/y') }} Ã  {{ article.createdAt | date('H:i') }} par {{ article.createdBy }}.</p>
                <img class="my-4" src="{{ article.image}}" alt="{{ article.title }}">
                <p>{{ article.content | raw }}</p>
            </article>
        </section>
    </div>

{% endblock %}
